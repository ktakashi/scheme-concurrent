(define (run n*)
  (let loop ((n* n*) (n 0) (t* '()) (r '()))
    (cond ((null? n*) (apply append (cons (map thread-join! t*) r)))
	  ((= n 10) 
	   (loop (cdr n*) 0 '() (cons (map thread-join! t*) r)))
	  (else (loop (cdr n*) (+ n 1) 
		      (cons (thread-start! (make-thread (heavy-task (car n*))))
			    t*)
		      r)))))
